<body>
    
    
    <%- include ('./partials/header') %>
    <!-- <button>Add form</button> -->
    <div class="container" style="margin-top: 30px;">
            <div class="row">
                <div class="col-sm">
                    <!-- One of three columns -->
                </div>
                <div class="col-sm">
                        <h2>silahkan pilih bahan</h2>
              <!-- action ke app.js => router -->
              <form method="POST" action="/user/select/<%= id%>">
                <div class="custom-control custom-checkbox checkbox-xl">
                    <input type="checkbox" class="custom-control-input" name="jeans" value="1" id="checkbox-1">
