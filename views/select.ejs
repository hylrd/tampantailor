                  </div>
                  <div class="custom-control custom-checkbox checkbox-xl">
                    <input type="checkbox" class="custom-control-input" id="checkbox-3">
                    <label class="custom-control-label" for="checkbox-3"><h5>Air</h5></label>
                  </div>
                  <div class="custom-control custom-checkbox checkbox-xl">
                    <input type="checkbox" class="custom-control-input" id="checkbox-4">
                    <label class="custom-control-label" for="checkbox-4"><h5>Api</h5></label>
                  </div>
                  <div class="custom-control custom-checkbox checkbox-xl">
                        <input type="checkbox" class="custom-control-input" id="checkbox-5">
                        <label class="custom-control-label" for="checkbox-5"><h5>karet</h5></label>
                      </div>
                  
                  <button type="submit" class="btn btn-primary" value="submit">combine</button>
                </form>
          </div>
          <div class="col-sm">
            <!-- One of three columns -->
          </div>
        </div>
      </div>
            </div>
            

    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>
        function deletefunction(id) {
          var txt;
          if (confirm("are you sure?")) {
            const xhr = new XMLHttpRequest(); // ajax http request
            xhr.open("POST", `http://localhost:3000/teachers/delete/${id}`);
            xhr.send();
            txt = "YES";
          } else {
            txt = "NO";
          }
          document.getElementById("demo").innerHTML = txt;
        }
        </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
